<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Opcoes_Fragment">


    <TextView
        android:layout_width="280dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:text="Termos de Política e Privacidade"
        android:textSize="16dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/priv"
        app:layout_constraintTop_toTopOf="@id/btnab1"
        app:layout_constraintBottom_toBottomOf="@+id/btnab1"
        />

    <ImageView
        android:id="@+id/priv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/priv_icon"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnab1"
        app:layout_constraintBottom_toBottomOf="@+id/btnab1"/>


    <ImageView
        android:id="@+id/sobre"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/nos_circle"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnab2"
        app:layout_constraintBottom_toBottomOf="@+id/btnab2" />

    <TextView
        android:id="@+id/feed"
        android:layout_width="232dp"
        android:layout_height="22dp"
        android:text="Avaliação do app"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/imageView2"
        app:layout_constraintTop_toTopOf="@id/btnab3"
        app:layout_constraintBottom_toBottomOf="@+id/btnab3"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="203dp"
        android:layout_height="25dp"
        android:text="Sobre nós"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/sobre"
        app:layout_constraintTop_toTopOf="@id/btnab2"
        app:layout_constraintBottom_toBottomOf="@+id/btnab2"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_feedback"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btnab3"
        app:layout_constraintBottom_toBottomOf="@+id/btnab3"/>

    <ImageButton
        android:id="@+id/btnab1"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnab3"
        android:background="?android:attr/selectableItemBackground"/>

    <ImageButton
        android:id="@+id/btnab2"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_manual" />

    <ImageButton
        android:id="@+id/btnab3"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnab2" />

    <ImageView
        android:id="@+id/versao"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@id/imageView2"
        app:layout_constraintStart_toStartOf="@id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/priv"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_smart"/>

    <TextView
        android:layout_width="272dp"
        android:layout_height="21dp"
        android:text="ASET - Versão 1.0"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@+id/versao"
        app:layout_constraintTop_toTopOf="@+id/versao"
        app:layout_constraintBottom_toBottomOf="@+id/versao"/>

    <ImageButton
        android:id="@+id/btn_manual"
        android:layout_width="409dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_manual"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_manual"
        app:layout_constraintBottom_toBottomOf="@id/btn_manual"
        android:src="@drawable/ic_book_circle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:text="Manual"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/img_manual"
        app:layout_constraintTop_toTopOf="@id/btn_manual"
        app:layout_constraintBottom_toBottomOf="@id/btn_manual"/>
</androidx.constraintlayout.widget.ConstraintLayout>