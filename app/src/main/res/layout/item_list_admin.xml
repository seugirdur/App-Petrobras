<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="385dp"
    android:layout_height="230dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EDEDED"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:layout_editor_absoluteX="-55dp"
            tools:layout_editor_absoluteY="-10dp">

            <ImageView
                android:id="@+id/imageProblema"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/todo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_launcher_background"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/dataRelatorio"
                android:layout_width="288dp"
                android:layout_height="28dp"
                android:layout_marginStart="18dp"
                android:text="@string/data_do_relat_rio_dd_mm_yyyy"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/imageProblema"
                app:layout_constraintTop_toTopOf="@id/imageProblema"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/labelNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="NOME COMPLETO"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/dataRelatorio"
                app:layout_constraintTop_toBottomOf="@+id/dataRelatorio"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/labelEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMAIL"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textNome"
                app:layout_constraintTop_toBottomOf="@+id/textNome"
                tools:ignore="HardcodedText,MissingConstraints" />

            <TextView
                android:id="@+id/textEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_robson_petrobras_com_br"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/labelEmail"
                app:layout_constraintTop_toBottomOf="@+id/labelEmail"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome_completo"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/labelNome"
                app:layout_constraintTop_toBottomOf="@+id/labelNome"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/labelSetor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15px"
                android:text="@string/setor"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/textEmail"
                app:layout_constraintTop_toBottomOf="@+id/textEmail"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textSetor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setor do UsuÃ¡rio"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/labelSetor"
                app:layout_constraintTop_toBottomOf="@+id/labelSetor"
                tools:ignore="MissingConstraints" />

            <View
                android:id="@+id/divider3"
                android:layout_width="400dp"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:background="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSetor" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
