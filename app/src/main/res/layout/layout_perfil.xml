<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view2"
        android:layout_width="358dp"
        android:layout_height="580dp"
        android:background="@drawable/view_tela_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagemPerfil"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        android:src="@drawable/ic_user_perfil"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="75dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/imageView7"
        app:layout_constraintEnd_toEndOf="@id/imageView7"
        app:layout_constraintTop_toTopOf="@id/editText3"
        app:layout_constraintBottom_toBottomOf="@id/email"
        app:srcCompat="@drawable/ic_baseline_email_24"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toStartOf="@id/editText1"
        app:layout_constraintTop_toTopOf="@id/editText1"
        app:layout_constraintBottom_toBottomOf="@id/nomecompleto"
        app:srcCompat="@drawable/ic_baseline_account_circle_24"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="75dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/imageView4"
        app:layout_constraintEnd_toEndOf="@id/imageView4"
        app:layout_constraintTop_toTopOf="@id/editText2"
        app:layout_constraintBottom_toBottomOf="@id/num_tel"
        app:srcCompat="@drawable/ic_baseline_call_preto"
         />

    <TextView
        android:id="@+id/num_chave"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:text="Chave"
        app:layout_constraintStart_toStartOf="@id/editText4"
        app:layout_constraintTop_toBottomOf="@id/editText4"
         />

    <TextView
        android:id="@+id/editText4"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:text="Registro do Funcionário"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imageView8"
        app:layout_constraintTop_toBottomOf="@id/email"
         />

    <TextView
        android:id="@+id/email"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:text="E-Mail"
        app:layout_constraintStart_toStartOf="@id/editText3"
        app:layout_constraintTop_toBottomOf="@id/editText3"
         />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:inputType="textPersonName"
        android:text="E-Mail"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@id/num_tel"
        app:layout_constraintTop_toBottomOf="@id/num_tel"
         />

    <TextView
        android:id="@+id/num_tel"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:text="Número de Telefone"
        app:layout_constraintStart_toStartOf="@id/editText2"
        app:layout_constraintTop_toBottomOf="@id/editText2"
         />

    <TextView
        android:id="@+id/editText2"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:inputType="textPersonName"
        android:text="Telefone"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imageView7"
        app:layout_constraintTop_toBottomOf="@+id/nomecompleto"
         />

    <TextView
        android:id="@+id/nomecompleto"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="1dp"
        android:text="Nome Completo"
        app:layout_constraintStart_toStartOf="@id/editText1"
        app:layout_constraintTop_toBottomOf="@id/editText1"
         />

    <TextView
        android:id="@+id/editText1"
        android:layout_width="240dp"
        android:layout_height="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:inputType="textPersonName"
        android:text="Nome Completo"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imageView4"
        app:layout_constraintTop_toBottomOf="@id/nome_login"
        />

    <Button
        android:id="@+id/btn_tela_perfil"
        style="@style/btn_tela_perfil"
        android:drawableStart="@drawable/ic_conf"
        android:text="EDITAR PERFIL"
        android:textColor="@color/white"
        android:onClick="mudame"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/num_chave"
        app:layout_constraintBottom_toTopOf="@id/textView18"
         />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/ppja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tela_perfil"
         />

    <!--style="@style/btn_tela_login"-->

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="75dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/imageView5"
        app:layout_constraintEnd_toEndOf="@id/imageView5"
        app:layout_constraintTop_toTopOf="@id/editText4"
        app:layout_constraintBottom_toBottomOf="@id/num_chave"
        app:srcCompat="@drawable/ic_resgis_do_func" />

    <TextView
        android:id="@+id/nome_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome_do_login"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"
        app:layout_constraintTop_toBottomOf="@id/imagemPerfil"
         />


</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>